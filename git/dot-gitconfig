[core]
  autocrlf = false
  safecrlf = true
  editor = vim
  excludesFile = ~/.gitignore
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[push]
  default = current
[pull]
  default = current
  rebase = true
[branch]
  autosetuprebase = always

[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
[merge]
    conflictstyle = diff3
    tool = vimdiff
    prompt = false
[diff]
    colorMoved = default
    tool = vimdiff
    prompt = false
